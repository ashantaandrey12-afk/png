<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3>Edit Child: <%= child.first_name %> <%= child.last_name %></h3>
                </div>
                <div class="card-body">
                    <form method="POST" action="/children/edit/<%= child.id %>" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="first_name" class="form-label">First Name</label>
                                    <input type="text" class="form-control" id="first_name" name="first_name" value="<%= child.first_name %>" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="last_name" class="form-label">Last Name</label>
                                    <input type="text" class="form-control" id="last_name" name="last_name" value="<%= child.last_name %>" required>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="date_of_birth" class="form-label">Date of Birth</label>
                                    <input type="date" class="form-control" id="date_of_birth" name="date_of_birth" value="<%= child.date_of_birth %>" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="gender" class="form-label">Gender</label>
                                    <select class="form-select" id="gender" name="gender" required>
                                        <option value="M" <%= child.gender === 'M' ? 'selected' : '' %>>Male</option>
                                        <option value="F" <%= child.gender === 'F' ? 'selected' : '' %>>Female</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="parent_id" class="form-label">Parent/Guardian</label>
                            <select class="form-select" id="parent_id" name="parent_id">
                                <option value="">Select Parent/Guardian</option>
                                <% if (parents && parents.length > 0) { %>
                                    <% parents.forEach(parent => { %>
                                        <option value="<%= parent.id %>" <%= child.parent_id == parent.id ? 'selected' : '' %>>
                                            <%= parent.first_name %> <%= parent.last_name %>
                                        </option>
                                    <% }) %>
                                <% } %>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="photo" class="form-label">Photo</label>
                            <input type="file" class="form-control" id="photo" name="photo" accept="image/*">
                            <% if (child.photo) { %>
                                <div class="mt-2">
                                    <small class="text-muted">Current photo:</small><br>
                                    <img src="/uploads/<%= child.photo %>" alt="Current Photo" class="img-thumbnail" style="max-width: 100px;">
                                </div>
                            <% } %>
                        </div>

                        <div class="mb-3">
                            <label for="medical_info" class="form-label">Medical Information</label>
                            <textarea class="form-control" id="medical_info" name="medical_info" rows="3"><%= child.medical_info || '' %></textarea>
                        </div>

                        <div class="mb-3">
                            <label for="notes" class="form-label">Notes</label>
                            <textarea class="form-control" id="notes" name="notes" rows="3"><%= child.notes || '' %></textarea>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="/children" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">Update Child</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>