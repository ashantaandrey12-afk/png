<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Children Management</h2>
        <a href="/children/add" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Add Child
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Photo</th>
                            <th>Name</th>
                            <th>Date of Birth</th>
                            <th>Gender</th>
                            <th>Parent/Guardian</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (children && children.length > 0) { %>
                            <% children.forEach(child => { %>
                            <tr>
                                <td>
                                    <% if (child.photo) { %>
                                        <img src="/uploads/<%= child.photo %>" alt="Child Photo" class="rounded-circle" width="40" height="40">
                                    <% } else { %>
                                        <div class="bg-secondary rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                            <i class="fas fa-user text-white"></i>
                                        </div>
                                    <% } %>
                                </td>
                                <td><%= child.first_name %> <%= child.last_name %></td>
                                <td><%= child.date_of_birth %></td>
                                <td><%= child.gender === 'M' ? 'Male' : 'Female' %></td>
                                <td>
                                    <% if (child.parent_first_name) { %>
                                        <%= child.parent_first_name %> <%= child.parent_last_name %>
                                    <% } else { %>
                                        <span class="text-muted">No parent assigned</span>
                                    <% } %>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="/children/edit/<%= child.id %>" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form method="POST" action="/children/delete/<%= child.id %>" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this child?')">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="6" class="text-center text-muted">No children found</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>