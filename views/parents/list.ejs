<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Parents Management</h2>
        <a href="/parents/add" class="btn btn-info">
            <i class="fas fa-plus me-2"></i>Add Parent
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Name</th>
                            <th>Phone</th>
                            <th>Email</th>
                            <th>Relationship</th>
                            <th>Address</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (parents && parents.length > 0) { %>
                            <% parents.forEach(parent => { %>
                            <tr>
                                <td><%= parent.first_name %> <%= parent.last_name %></td>
                                <td><%= parent.phone_number %></td>
                                <td><%= parent.email %></td>
                                <td><%= parent.relationship_to_child %></td>
                                <td><%= parent.address %></td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <button class="btn btn-sm btn-outline-primary" onclick="editParent(<%= parent.id %>)">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger" onclick="deleteParent(<%= parent.id %>)">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="6" class="text-center text-muted">No parents found</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
function editParent(id) {
    window.location.href = `/parents/edit/${id}`;
}

function deleteParent(id) {
    if (confirm('Are you sure you want to delete this parent?')) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = `/parents/delete/${id}`;
        document.body.appendChild(form);
        form.submit();
    }
}
</script>